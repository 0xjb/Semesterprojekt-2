<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="presentation.ControllerFXMLSocialWorker">
   <children>
      <TabPane prefHeight="300.0" prefWidth="720.0" tabClosingPolicy="UNAVAILABLE">
         <tabs>
            <Tab fx:id="casesTab" text="Cases">
               <content>
                  <HBox prefHeight="300.0" prefWidth="720.0">
                     <children>
                        <VBox alignment="CENTER" minWidth="125.0" prefHeight="260.0" prefWidth="135.0" spacing="10.0">
                           <children>
                              <Button fx:id="createCaseButton" mnemonicParsing="false" onAction="#createCaseAction" prefWidth="100.0" text="Create case" />
                              <Button fx:id="editCaseButton" mnemonicParsing="false" prefWidth="100.0" text="Edit case" />
                              <Button fx:id="createCitizenButton" mnemonicParsing="false" onAction="#createCitizenAction" prefWidth="100.0" text="Create citizen" />
                              <Button fx:id="editCitizenButton" mnemonicParsing="false" prefWidth="100.0" text="Edit citizen" />
                              <Label fx:id="caseLabel" />
                           </children>
                        </VBox>
                        <VBox alignment="TOP_CENTER" prefHeight="270.0" prefWidth="305.0" spacing="10.0">
                           <children>
                              <Label text="Citizens" />
                              <ListView fx:id="citizenListView" maxWidth="-Infinity" prefHeight="198.0" prefWidth="344.0" />
                              <Button fx:id="deleteCitizenButton" mnemonicParsing="false" onAction="#deleteCitizenAction" prefHeight="26.0" prefWidth="100.0" text="Delete citizen" />
                              <Button fx:id="updateCitizenListButton" mnemonicParsing="false" onAction="#updateCitizenListAction" prefWidth="100.0" text="Update List" />
                           </children>
                           <padding>
                              <Insets right="10.0" />
                           </padding>
                        </VBox>
                        <VBox alignment="TOP_CENTER" prefHeight="270.0" prefWidth="305.0" spacing="10.0">
                           <children>
                              <Label text="Cases" />
                              <ListView fx:id="caseListView" maxWidth="-Infinity" prefHeight="198.0" prefWidth="344.0" />
                              <Button fx:id="deleteCaseButton" mnemonicParsing="false" onAction="#DeleteCaseAction" prefWidth="100.0" text="Delete case" />
                              <Button fx:id="updateCaseListButton" mnemonicParsing="false" onAction="#updateCaseListAction" prefWidth="100.0" text="Update List" />
                           </children>
                           <padding>
                              <Insets right="10.0" />
                           </padding>
                        </VBox>
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </HBox>
               </content>
            </Tab>
            <Tab fx:id="inquiriesTab" text="Inquiries">
               <content>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <VBox alignment="CENTER" minWidth="125.0" prefHeight="200.0" prefWidth="135.0" spacing="10.0">
                           <children>
                              <Button fx:id="createInquiryButton" mnemonicParsing="false" onAction="#createInquiryAction" prefWidth="100.0" text="Create Inquiry" />
                              <Button fx:id="editInquiryButton" mnemonicParsing="false" prefWidth="100.0" text="Edit Inquiry" />
                              <Label fx:id="caseLabel1" />
                           </children>
                        </VBox>
                        <VBox alignment="TOP_CENTER" prefHeight="270.0" prefWidth="305.0" spacing="10.0">
                           <children>
                              <Label text="Citizens" />
                              <ListView fx:id="citizenListView1" maxWidth="-Infinity" prefHeight="160.0" prefWidth="283.0" />
                           </children>
                           <padding>
                              <Insets right="10.0" />
                           </padding>
                        </VBox>
                        <VBox alignment="TOP_CENTER" prefHeight="270.0" prefWidth="305.0" spacing="10.0">
                           <children>
                              <Label text="Inquiries" />
                              <ListView fx:id="InquiriesListView" maxWidth="-Infinity" prefHeight="160.0" prefWidth="283.0" />
                              <Button fx:id="deleteInquiryButton" mnemonicParsing="false" onAction="#deleteInquiryAction" prefHeight="26.0" prefWidth="100.0" text="Delete inquiry" />
                              <Button fx:id="updateInquiryListView" mnemonicParsing="false" onAction="#updateInquiryListAction" prefWidth="100.0" text="Update List" />
                           </children>
                           <padding>
                              <Insets right="10.0" />
                           </padding>
                        </VBox>
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </HBox>
               </content>
            </Tab>
         </tabs>
      </TabPane>
      <Button fx:id="logoutButtonSW" layoutX="650.0" layoutY="2.0" mnemonicParsing="false" onAction="#logoutButtonAction" text="Logout" />
      <Label fx:id="loginInfoLabelSW" layoutX="250.0" layoutY="2.0" />
   </children>
</AnchorPane>
